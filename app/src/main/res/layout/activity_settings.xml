<?xml version="1.0" encoding="utf-8"?>



<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liutaurasmazonas.cslogintrying.SettingsActivity">

    // @+id/ibHome


    // Notifications buttons

    // News buttons

    // Dark and Light buttons

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/settingstitleeee2"
        android:id="@+id/imageView"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="66dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="790dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="matrix"
            app:srcCompat="@drawable/topbarcremebackgroundddd2" />

        <ImageButton
            android:id="@+id/addAProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="14dp"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pluss" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <EditText
            android:id="@+id/editTextInput"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="16dp"
            android:background="@color/cardview_light_background">

            <requestFocus></requestFocus>

        </EditText>

    </RelativeLayout>
    <ImageButton
        android:id="@+id/button1"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="16dp"
        android:background="#00ffffff"
        android:onClick="onSearchClick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/search"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout10">

        <ImageButton
            app:srcCompat="@drawable/newsbutton2"
            android:scaleType="fitEnd"
            android:background="#00ffffff"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ibNewsBlack" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/settingsbuttonblue2"
            android:id="@+id/ibSettings"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/liveratesbuttongrey2"
            android:id="@+id/ibLiveRatesBlack"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/ibSettings"
            android:layout_toStartOf="@+id/ibSettings" />

        <ImageButton
        app:srcCompat="@drawable/economiccalendarbuttongrey2"
        android:id="@+id/ibEconCalBlack"
        android:background="#00ffffff"
        android:scaleType="fitEnd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:cropToPadding="false"

            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/ibNewsBlack"
            android:layout_toEndOf="@+id/ibNewsBlack" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"><![CDATA[

        // Notifications buttons



        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="90dp" />



        // Dark and Light buttons



        ]]>

        <Button
            android:id="@+id/button3"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:backgroundTint="#2B292A"
            android:onClick="true"
            android:text="OFF"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="23sp" />

        <Button
            android:id="@+id/bDark"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_above="@+id/bChangePassword"
            android:layout_alignStart="@+id/bChangePassword"
            android:layout_marginRight="8dp"
            android:onClick="true"
            android:text="Dark"
            android:textAllCaps="false"
            android:textSize="23sp" />

        <Button
            android:id="@+id/bChangePassword"
            android:layout_width="326dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/button3"
            android:layout_below="@+id/button3"
            android:text="Change password"
            android:textAllCaps="false"
            android:textSize="23sp" />

        <Button
            android:id="@+id/bLogout"
            android:layout_width="326dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textSize="23sp"
            android:layout_below="@+id/bChangePassword"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_above="@+id/relativeLayout10"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="11dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/yahoo333"
            android:layout_alignTop="@+id/textView24"
            android:layout_alignParentStart="true"
            android:layout_marginTop="14dp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="345dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/bloomberg"
            android:layout_below="@+id/imageView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="Market news and data provided by:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView24"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="Hello CreditSuisse!"
            android:textColor="#FAFAFA"
            android:textSize="17sp" />

    </RelativeLayout>


</RelativeLayout>
