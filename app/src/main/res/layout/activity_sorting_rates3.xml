<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liutaurasmazonas.cslogintrying.activity_sorting_rates3">


<RelativeLayout
android:layout_width="300dp"
android:layout_height="90dp"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_alignParentRight="true"
android:layout_alignParentEnd="true">

<ImageButton
    app:srcCompat="@drawable/newsbutton2"
    android:scaleType="fitEnd"
    android:background="#00ffffff"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/ibNewsBlack" />

<ImageButton
    app:srcCompat="@drawable/economiccalendarbuttongrey2"
    android:id="@+id/ibEconCalBlack"
    android:background="#00ffffff"
    android:scaleType="fitEnd"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:cropToPadding="false"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="90dp"
    android:layout_marginStart="90dp" />

<ImageButton
    android:layout_width="90dp"
    android:layout_height="90dp"
    app:srcCompat="@drawable/liveratesbuttongrey2"
    android:id="@+id/ibLiveRatesBlack"
    android:background="#00ffffff"
    android:scaleType="fitEnd"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/ibEconCalBlack"
    android:layout_toEndOf="@+id/ibEconCalBlack" />

<ImageButton
    android:layout_width="90dp"
    android:layout_height="90dp"
    app:srcCompat="@drawable/settingsbuttongrey2"
    android:id="@+id/ibSettingsBlack"
    android:background="#00ffffff"
    android:scaleType="fitEnd"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="95dp"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true">

<ImageView
    app:srcCompat="@drawable/topbarcremebackgroundddd2"
    android:id="@+id/imageView3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="790dp"
    android:scaleType="matrix"
    android:layout_height="65dp" />

<ImageButton
    app:srcCompat="@drawable/pluss"
    android:id="@+id/imageButton"
    android:background="#00ffffff"
    android:scaleType="fitXY"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_alignBottom="@+id/imageView3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="7dp" />

<ImageView
    app:srcCompat="@drawable/bestsearchbar"
    android:id="@+id/imageView4"
    android:background="#00ffffff"
    android:scaleType="fitXY"
    android:layout_width="210dp"
    android:layout_alignBottom="@+id/imageButton"
    android:layout_centerHorizontal="true"
    android:layout_height="45dp" />

<ImageButton
    app:srcCompat="@drawable/bell"
    android:id="@+id/imageButton2"
    android:background="#00ffffff"
    android:scaleType="fitXY"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignBottom="@+id/imageView4"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="12dp"
    android:layout_marginEnd="12dp" />

</RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Commodities" />

        <TextView
            android:id="@+id/currencywarning"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/Shares"
            android:layout_below="@+id/spinner4"
            android:layout_marginStart="40dp"
            android:text="*Default currency is USD" />

        <TextView
            android:id="@+id/Currencies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Currencies"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/Commodities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Commodities"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="LIVE RATES"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/currencywarning"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/yahoo" />

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Indices" />

        <TextView
            android:id="@+id/Indices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Indices"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Shares" />

        <TextView
            android:id="@+id/Shares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TEXT"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:text="Shares"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Currencies" />
    </RelativeLayout>

</RelativeLayout>