<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_live_rates"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.liutaurasmazonas.cslogintrying.LiveRatesActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="790dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="matrix"
            app:srcCompat="@drawable/topbarcremebackgroundddd2" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pluss" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/imageButton"
            android:layout_centerHorizontal="true"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bestsearchbar" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bell" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/ibNewsBlack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/newsbutton2" />

        <ImageButton
            android:id="@+id/ibEconCalBlack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:background="#00ffffff"
            android:cropToPadding="false"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/economiccalendarbuttongrey2" />

        <ImageButton
            android:id="@+id/ibLiveRates"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ibEconCalBlack"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/liveratesbuttonblue2" />

        <ImageButton
            android:id="@+id/ibSettingsBlack"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            app:srcCompat="@drawable/settingsbuttongrey2" />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout4">

        </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_below="@+id/bShares"
        android:layout_toEndOf="@+id/relativeLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/sharenameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:fontFamily="sans-serif"
                android:paddingBottom="20dp"
                android:text="Name"
                tools:textSize="30sp"
                tools:textStyle="bold" />

            <TextView
                android:id="@+id/sharesymbolID"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Symbol:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharepriceID"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Last price:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharechangeID"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Live change:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharepercentagechangeID"
                android:layout_width="137dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Change %"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharevolumeID"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Volume:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/shareperatioID"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="PE Ratio:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharedayshighID"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Days High:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharedayslowID"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Days Low:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sharemarketcapID"
                android:layout_width="142dp"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="Market Cap:"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="14dp"
                android:layout_toStartOf="@+id/ibLiveRates"
                app:srcCompat="@drawable/yahoo" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/bShares"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sharesbuttonfinalinverse"
        android:layout_below="@+id/relativeLayout4"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/bCurrencies"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/bShares"
        android:layout_toEndOf="@+id/bShares"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/currenciesbuttonfinal2" />

    <ImageButton
        android:id="@+id/bCommodities"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/commoditiesbuttonfinal"
        android:layout_alignTop="@+id/bCurrencies"
        android:layout_toEndOf="@+id/bCurrencies" />

    <ImageButton
        android:id="@+id/bIndices"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/bCommodities"
        android:background="#ffffff"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/indicesbuttonfinal" />
</RelativeLayout>
