<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.liutaurasmazonas.cslogintrying.HomePageNews">


    <RelativeLayout
        android:id="@+id/relativeLayout9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_marginTop="12dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageButton
            app:srcCompat="@drawable/newbuttonblue2"
            android:scaleType="fitEnd"
            android:background="#00ffffff"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ibNewsBlack" />

        <ImageButton
            app:srcCompat="@drawable/economiccalendarbuttongrey2"
            android:id="@+id/ibEconCalBlack"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:cropToPadding="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/liveratesbuttongrey2"
            android:id="@+id/ibLiveRates"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ibEconCalBlack"
            android:layout_toEndOf="@+id/ibEconCalBlack" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/settingsbuttongrey2"
            android:id="@+id/ibSettingsBlack"
            android:background="#00ffffff"
            android:scaleType="fitEnd"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="790dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="matrix"
            app:srcCompat="@drawable/topbarcremebackgroundddd2" />

        <ImageButton
            android:id="@+id/addAProfile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="14dp"
            android:background="#00ffffff"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pluss" />





    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <EditText
            android:id="@+id/editTextInput"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="55dp"
            android:layout_marginTop="16dp"
            android:cursorVisible="false"
            android:background="@color/cardview_light_background">



        </EditText>

    </RelativeLayout>
    <ImageButton
        android:id="@+id/button1"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_marginEnd="21dp"
        android:layout_marginTop="16dp"
        android:background="#00ffffff"
        android:onClick="onSearchClick"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/search"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="59dp"
        android:orientation="horizontal"
        android:paddingTop="7dp">

        <LinearLayout
            android:id="@+id/LinearLayoutScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout4"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/button2"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:background="#0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:text="Refresh"
                app:srcCompat="@drawable/refreshbutton" />


            <ImageButton
                android:id="@+id/plusgrey1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignEnd="@+id/imageButton5"
                android:layout_alignRight="@+id/imageButton5"
                android:layout_below="@+id/relativeLayout4"
                android:background="#0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circlesplusgrey1" />

            <ImageButton
                android:id="@+id/plusgrey2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/relativeLayout4"
                android:layout_toEndOf="@+id/imageButton2"
                android:layout_toRightOf="@+id/imageButton2"
                android:background="#0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circlesplusgrey2" />

            <ImageButton
                android:id="@+id/plusgrey3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/relativeLayout4"
                android:layout_toLeftOf="@+id/plusgrey2"
                android:layout_toStartOf="@+id/plusgrey2"
                android:background="#0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circlesplusgrey3" />

            <ImageButton
                android:id="@+id/plusgrey4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/relativeLayout4"
                android:layout_toLeftOf="@+id/plusgrey2"
                android:layout_toStartOf="@+id/plusgrey2"
                android:background="#0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circlesplusgrey4" />

            <ImageButton
                android:id="@+id/plusgrey5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_below="@+id/relativeLayout4"
                android:layout_toLeftOf="@+id/plusgrey2"
                android:layout_toStartOf="@+id/plusgrey2"
                android:background="#0000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/circlesplusgrey5" />

        </LinearLayout>
    </HorizontalScrollView>

    <!--<Button-->
    <!--android:id="@+id/buttonload"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignBottom="@+id/button2"-->
    <!--android:layout_toStartOf="@+id/button2"-->
    <!--android:text="LOAD" />-->

</RelativeLayout>