<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liutaurasmazonas.cslogintrying.sortingrates">

<RelativeLayout
android:layout_width="300dp"
android:layout_height="90dp"
android:layout_alignParentBottom="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true"
android:layout_alignParentRight="true"
android:layout_alignParentEnd="true"
    android:id="@+id/relativeLayout8">

<ImageButton
    app:srcCompat="@drawable/newsbutton2"
    android:scaleType="fitEnd"
    android:background="#00ffffff"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:id="@+id/ibNewsBlack" />

<ImageButton
    app:srcCompat="@drawable/economiccalendarbuttongrey2"
    android:id="@+id/ibEconCalBlack"
    android:background="#00ffffff"
    android:scaleType="fitEnd"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:cropToPadding="false"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="90dp"
    android:layout_marginStart="90dp" />

<ImageButton
    android:layout_width="90dp"
    android:layout_height="90dp"
    app:srcCompat="@drawable/liveratesbuttongrey2"
    android:id="@+id/ibLiveRatesBlack"
    android:background="#00ffffff"
    android:scaleType="fitEnd"
    android:layout_alignParentTop="true"
    android:layout_toRightOf="@+id/ibEconCalBlack"
    android:layout_toEndOf="@+id/ibEconCalBlack" />

<ImageButton
    android:layout_width="90dp"
    android:layout_height="90dp"
    app:srcCompat="@drawable/settingsbuttongrey2"
    android:id="@+id/ibSettingsBlack"
    android:background="#00ffffff"
    android:scaleType="fitEnd"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />

</RelativeLayout>

<RelativeLayout
android:layout_width="match_parent"
android:layout_height="95dp"
android:layout_alignParentTop="true"
android:layout_alignParentLeft="true"
android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="790dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/topbarcremebackground3" />

<ImageButton
    app:srcCompat="@drawable/pluss"
    android:id="@+id/addAProfile"
    android:background="#00ffffff"
    android:scaleType="fitXY"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_alignBottom="@+id/imageView5"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="7dp" />

<ImageView
    app:srcCompat="@drawable/bestsearchbar"
    android:id="@+id/imageView4"
    android:background="#00ffffff"
    android:scaleType="fitXY"
    android:layout_width="210dp"
    android:layout_alignBottom="@+id/addAProfile"
    android:layout_centerHorizontal="true"
    android:layout_height="45dp" />

<ImageButton
    app:srcCompat="@drawable/bell"
    android:id="@+id/imageButton2"
    android:background="#00ffffff"
    android:scaleType="fitXY"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignBottom="@+id/imageView4"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="12dp"
    android:layout_marginEnd="12dp" />

</RelativeLayout>

<RelativeLayout
android:id="@+id/relativeLayout5"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_marginTop="62dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/liveratesbarrrr2" />

    <TextView
        android:id="@+id/Shares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif"
        android:text="Shares"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Shares"
        android:background="@android:color/transparent"/>

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/spinner"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="9dp"
        android:layout_weight="1"
        android:onClick="showDropDown"
        android:src="@drawable/angledown" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_above="@+id/Commodities"
        android:layout_alignStart="@+id/imageView10"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="9dp"
        android:layout_weight="1"
        android:onClick="showDropDown"
        android:src="@drawable/angledown" />

    <TextView
        android:id="@+id/Currencies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Shares"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="8dp"
        android:text="Currencies"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:layout_below="@+id/Currencies" />

    <TextView
        android:id="@+id/Commodities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Currencies"
        android:layout_below="@+id/spinner2"
        android:layout_marginTop="8dp"
        android:text="Commodities"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/spinner3"
        android:layout_alignStart="@+id/imageView15"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="9dp"
        android:layout_weight="1"
        android:onClick="showDropDown"
        android:src="@drawable/angledown" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:background="@android:color/transparent"
        android:layout_below="@+id/Commodities" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="282dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Indices"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner3"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:text="Indices"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginEnd="9dp"
                android:layout_weight="1"
                android:onClick="showDropDown"
                android:src="@drawable/angledown"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/currencywarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="15dp"
            android:text="*Default currency is USD" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/currencywarning"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/yahoo" />

    </LinearLayout>

</RelativeLayout>

</RelativeLayout>
