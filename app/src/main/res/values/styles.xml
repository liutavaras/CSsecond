<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlackTheme" >

        <item name="android:background">#000000</item>

        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="LightTheme" >

        <item name="android:background">#FFFFFF</item>

        <item name="android:textColor">#000000</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="addaprofile">
        <item name="android:layout_width">43dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_alignBottom">@+id/imageView5</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_toStartOf">@+id/imageView4</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="bell">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_alignTop">@+id/addAProfile</item>
        <item name="android:layout_toEndOf">@+id/imageView4</item>
        <item name="android:layout_marginStart">17dp</item>
    </style>

</resources>